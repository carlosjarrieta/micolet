<div class="splash-container">
  <div class="card">
    <div class="card-header text-center">
      <%= image_tag 'logo.png', class:"logo-img", alt:"logo"%><span class="splash-description">Ingrese su correo electrónico</span>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <p>Le enviaremos un correo electrónico para restablecer su contraseña</p>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", 
            required: true, 
            class:"form-control form-control-lg",
            placeholder:"Correo Electrónico" %>
        </div>
        <div class="form-group pt-1">
          <%= f.submit "Cambiar contraseña", class:"btn btn-block btn-primary btn-xl" %>
        </div>
      <% end %>
    </div>
    <div class="card-footer text-center">
      <%- if controller_name != 'sessions' %>
        <%= link_to "Ingresar", new_session_path(resource_name) %><br />
      <% end %>
    </div>
  </div>
</div>
