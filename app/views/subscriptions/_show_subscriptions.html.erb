<div class="col-md-4 mb-4">
  <div class="card">
    <div class="card-header">
      <h4 class="d-flex justify-content-between align-items-center mb-0">
        <span class="text-muted"><%= t("your_subscriptions")%></span>
        <span class="badge badge-secondary badge-pill"><%= current_user.subscriptions.count %></span>
      </h4>
    </div>
    <div class="card-body">
      <ul class="list-group mb-3">
        <% current_user.subscriptions.each do |item| %>
          <li class="list-group-item d-flex justify-content-between">
            <div>
              <h6 class="my-0"><%= item.category.name %></h6>
              <small class="text-muted"><%= t("product_available")%></small>
            </div>
            <span class="text-muted"><%= number_with_delimiter(rand(230..15000)) %></span>
          </li>
        <% end %>
      </div>
    </div>
  </div>
</div>
